<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".EngineeringActivity">

    <View
        android:layout_alignParentTop="true"
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="40sp"/>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/v1"
    android:id="@+id/cv_cmp_eng"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView

            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksand"
            android:text="Computer Engineering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_below="@id/cv_cmp_eng"
        android:id="@+id/cv_elx_cmm_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand"
                android:text="Electronics and Communication Engineering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_it_eng"
        android:layout_margin="5dp"
        android:layout_below="@+id/cv_elx_cmm_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand"
                android:text="IT Engineering"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cv_soft_eng"
        android:layout_below="@id/cv_it_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"

                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand"
                android:text="Software Engineering"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cv_elt_elx_eng"
        android:layout_below="@id/cv_soft_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand"
                android:text="Electrical and Electornics Engineering"
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cv_civil"
        android:clickable="true"
        android:layout_below="@id/cv_elt_elx_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand"
                android:text="Civil Engineering"
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>